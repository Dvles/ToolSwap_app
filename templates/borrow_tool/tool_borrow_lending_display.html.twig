{% extends "base.html.twig" %}

{% block title %}Mes prêts{% endblock %}

{% block body %}

<h2>Mes prêts</h2>

    {% if borrowTools == null %}
        <p> Vous n'avez pas encore prêté d'outils. </p>
        <a href=" {{ path ('tool_display_all')}}">
            <button type="button">Rechercher outil</button>
        </a>

    {% else %}

        <div class="tool-list">
            {% for borrowTool in borrowTools %}
                <div class="tool-item">
                    <h3>{{ borrowTool.tool }}</h3>
                    <p><strong>Prêté à </strong> {{ borrowTool.userBorrower }} </p>
                    <p><strong>Début:</strong> {{ borrowTool.start }} - <strong>Fin:</strong> {{ borrowTool.end }}</p>
                    <p><strong>Statut:</strong> {{ borrowTool.status }} </p>

                    <a href="">
                        <button type="button">modifier statut</button>
                    </a>
                    <a href="">
                        <button type="button">voir outil</button>
                    </a>

                    <br><br>
                    <br><br>
                </div>
            {% endfor %}
        </div>

    {% endif %}


{% endblock %}
