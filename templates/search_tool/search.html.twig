{% extends 'base.html.twig' %}

{% block title %}Search Tools
{% endblock %}

{% block body %}
	<h1>Search Tools</h1>

	{% if tools is not empty %}
		<h2>Search Results
			<strong>
				{{ keyword }}
			</strong>:</h2>
		<ul>
			<div class="container" style="max-width: 80%; margin: 0 auto; padding-bottom: 100px;">
    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
        {% for tool in tools %}
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <img src="{{ tool.imageTool }}" alt="{{ tool.name }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{ tool.name }}</h5>
                        <p class="card-text">{{ tool.owner.community }}</p>
                        <p class="card-text">
                            {% if tool.priceDay == 0 %}
                                <strong>
                                    <span style="color:#ff8719;">GRATUIT</span>
                                </strong>
                            {% else %}
                                <strong>{{ tool.priceDay }} â‚¬</strong> / jour
                            {% endif %}
                        </p>
                        <div class="d-flex">
                            <a href="{{ path('tool_display_single', {'tool_id': tool.id}) }}" class="btn btn-custom-orange" style="max-width: 40%; margin-right: 15px;">Voir outil</a>
                            {% if app.user is not null and app.user.id != tool.owner.id %}
                                <a href="{{ path('tool_borrow_calendar', {'tool_id': tool.id}) }}" class="btn btn-success">Emprunter</a>
                            {% elseif app.user is not null and app.user.id == tool.owner.id %}
                                <button class="btn btn-secondary" disabled title="Vous ne pouvez pas emprunter votre propre outil">Emprunter</button>
{% else %}
    <a href="{{ path('app_login') }}" class="btn btn-secondary" title="Veuillez vous connecter pour emprunter un outil">Emprunter</a>
{% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

		</ul>
	{% else %}
		<p>No tools found.</p>
	{% endif %}
{% endblock %}
